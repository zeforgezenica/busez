{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "_id": { "type": "string" },
    "countryId": { "type": "string" },
    "name": { "type": "string" },
    "zipCode": { "type": "number" },
    "coordinates": {
      "type": ["array", "null"],
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2
    }
  },
  "required": ["countryId", "name", "zipCode"]
}
