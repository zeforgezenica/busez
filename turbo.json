{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**"
      ],
      "outputLogs": "new-only"
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}